mixin header(headerData)
  .block-header
   .about-icon= headerData.icon
   .about-header= headerData.header

mixin experience(experienceData)
  li.experience-info 
    .experience-position-degree.info-header= experienceData.degree
    .experience-period= experienceData.period
    .experience-facility.info-header= experienceData.facility
    .experience-description= experienceData.description

